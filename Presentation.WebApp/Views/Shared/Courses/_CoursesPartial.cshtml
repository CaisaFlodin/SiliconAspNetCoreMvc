@Model CoursesModel

<section id="courses">
    <div class="container">
        <div id="menu">
            <nav>
                <a class="menu-link" href="home.html"><i class="fa-regular fa-house"></i>Home</a>
                <span class="arrows"><i class="fa-regular fa-angles-right"></i></span>
                <a class="menu-link">Courses</a>
            </nav>
        </div>
        <div class="form-wrapper">
            <h1>Courses</h1>
            <form>
                <!-- <div class="dropdown"> -->
                   
                <select name="categories" id="categories" form="category-form">
                    @if (Model.Categories != null)
                    {
                        foreach (var category in Model.Categories)
                        {
                            <option value="@category">@category</option>
                           
                        }
                    }
                  @*   <option value="all" selected>All categories</option>
                    <option value="web">Web development</option>
                    <option value="mobile">Mobile development</option>
                    <option value="game">Game development</option>
                    <option value="design">Design</option>
                    <option value="testing">Testing</option>
                    <option value="datasci">Data Science</option> *@
                </select>
                <!-- </div> -->
                <div>
                    <div class="search">
                        <input type="search" placeholder="Search courses" maxLength="30" />
                        <i class="fa-regular fa-magnifying-glass"></i>
                    </div>
                </div>
            </form>
        </div>
        @if (Model.CoursesDetails != null)
        {
            foreach (var course in Model.CoursesDetails)
            {
                <div class="card">
                    <img src="@course.CourseImage.ImageUrl" alt="@course.CourseImage.AltText" class="course-img" />
                    <div class="card-icon-wrapper">
                        <button class="bookmark"><i class="@course.Icon"></i></button>
                    </div>
                    <div class="content">
                        <h2>@course.Title</h2>
                        <h3>@course.Author</h3>
                        <span class="discount">$@course.Discount</span>
                        <span class="price">$@course.Price</span>
                        <div class="divider">
                            <p><i class="fa-sharp fa-regular fa-clock"></i>@course.Duration</p>
                            <p><i class="fa-regular fa-thumbs-up"></i>@course.Rating</p>
                        </div>
                    </div>
                </div>
            }
        }
