@model HomeIndexViewModel

<section id="newsletter">

    <div class="container">

        <div class="title">
            <h1>Don't Want to Miss Anything?</h1>
            <img src="~/images/home/arrow.svg" alt="arrow">
        </div>

        <form method="post" asp-controller="Home" asp-action="Index" method="post" novalidate>

            <div class="form-content">
                <p id="sign-up">Sign up for<br>Newsletters</p>

                <div class="checkbox-group">

                    <div class="checkbox">
                        <input type="checkbox" />
                        <label asp-for="@Model.Form.CheckboxDaily">Daily Newsletter</label>
                    </div>

                    <div class="checkbox">
                        <input type="checkbox" />
                        <label asp-for="@Model.Form.CheckboxAdvertising">Advertising Updates</label>
                    </div>

                    <div class="checkbox">
                        <input type="checkbox" />
                        <label asp-for="@Model.Form.CheckboxWeek">Week in Review</label>
                    </div>

                    <div class="checkbox">
                        <input type="checkbox" />
                        <label asp-for="@Model.Form.CheckboxEvent">Event Updates</label>
                    </div>

                    <div class="checkbox">
                        <input type="checkbox" />
                        <label asp-for="@Model.Form.CheckboxStartups">Startups Weekly</label>
                    </div>

                    <div class="checkbox">
                        <input type="checkbox" />
                        <label asp-for="@Model.Form.CheckboxPodcasts">Podcasts</label>
                    </div>

                </div>
            </div>

            <div class="email-group">

                <label asp-for="@Model.Form.Email"><img src="" /></label>
                <span asp-validation-for="@Model.Form.Email"></span>
                <input asp-for="@Model.Form.Email" placeholder="Your Email" />

                <button class="btn-theme" type="submit">Subscribe*</button>

            </div>
            @if (ViewData["Status"]?.ToString() == "Success")
            {
                <span class="alert alert-success">You have been subscribed</span>
            }
            else if (ViewData["Status"]?.ToString() == "AlreadyExists")
            {
                <span class="alert alert-warning">You are already subscribed</span>
            }
            else if (ViewData["Status"]?.ToString() == "Invalid")
            {
                <span class="alert alert-danger">You must enter an valid email address</span>
            }
            else if (ViewData["Status"]?.ToString() == "ConnectionFailed")
            {
                <span class="alert alert-danger">Unable to contact the server. Please try again later.</span>
            }
            else
            {
                <span class="terms">
                    <p> <a href="#">*</a> Yes, I agree to the <a asp-controller="About" asp-action="Terms">terms</a> and <a asp-controller="About" asp-action="Policy">privacy policy</a>.</p>

                </span>
            }
           
        </form>
    </div>
</section>
@await Html.PartialAsync("_ValidationScriptPartial")